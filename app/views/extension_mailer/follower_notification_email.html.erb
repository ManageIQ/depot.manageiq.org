<h1>New version of <%= @cookbook_version.name %> released.</h1>
<p>A new version of <%= @cookbook_version.name %> has been released [<%= @cookbook_version.version %>].</p>
<%= link_to 'View Version', cookbook_version_url(@cookbook_version.cookbook, @cookbook_version), class: 'button accept' %>

<div class="changelog">
  <% if @cookbook_version.changelog.present? %>
    <h2 class="title">Changelog</h2>
    <%= HTML_Truncator.truncate(render_document(@cookbook_version.changelog, @cookbook_version.changelog_extension), 30, ellipsis: '').html_safe %>

    <%= link_to 'View Full Changelog', cookbook_version_url(@cookbook_version.cookbook, @cookbook_version, anchor: 'changelog'), class: 'button accept' %>
  <% end %>
</div>

<%= link_to 'Unsubscribe', unsubscribe_url(@email_preference) %>
