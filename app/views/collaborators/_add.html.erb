<h1>Add Collaborators</h1>
<a class="close-reveal-modal">&#215;</a>

<%= form_for Collaborator.new do |f| %>
  <div class="row collapse">
    <div class="small-10 columns">
      <%= f.hidden_field :resourceable_type, value: resource.class.name %>
      <%= f.hidden_field :resourceable_id, value: resource.id %>
      <%= f.hidden_field :user_ids, class: 'collaborators multiple', 'data-url' => collaborators_path(ineligible_user_ids: Collaborator.ineligible_collaborators_for(resource).map(&:id)) %>
    </div>
    <div class="small-2 columns">
      <%= f.submit 'Add', class: 'button radius postfix' %>
    </div>
  </div>
<% end %>
