<div class="main" data-equalizer-watch>
  <% if extension.deprecated? %>
    <div class="deprecation-notice">
      <h2 class="deprecation-copy">
        <% if extension.replacement.present? %>
          <i class="fa fa-exclamation-triangle"></i> <%= extension.name %> has been deprecated in favor of <%= link_to extension.replacement.name, extension.replacement %>
        <% else %>
          <i class="fa fa-exclamation-triangle"></i> <%= extension.name %> has been deprecated
        <% end %>
      </h2>
    </div>
  <% end %>

  <small class="rss">
    <%= link_to extension_path(extension, format: 'atom'), class: 'rss_feed_link' do %>
      <i class="fa fa-rss"></i> RSS
    <% end %>
  </small>
  <h1 class="heading">
    <span itemprop="name"><%= extension.name %></span>
    <% if extension_versions.count > 0 %>
      <small class="version_dropdown">
        <%= link_to '#', 'data-dropdown' => 'versions', class: 'button radius tiny dropdown secondary', rel: 'extension_versions' do %>
          <span class="versions_count">
            <%= pluralize "(#{extension_versions.count})", 'Version' %>
          </span>
          <%= version.try(:version) %>
        <% end %>
        <ul id="versions" data-dropdown-content class="f-dropdown">
          <li>
            <ul>
              <% extension_versions.each do |extension_version| %>
                <li>
                  <%= link_to extension_version_path(extension, extension_version), rel: 'extension_version' do %>
                    <%= extension_version.version %>
                    <% if extension_version == version %><i class="fa fa-check right"></i><% end %>
                  <% end %>
                </li>
              <% end %>
            </ul>
          </li>
        </ul>
      </small>
    <% end %>

    <%= render 'extensions/follow_button_show', extension: @extension %>
  </h1>

  <div class="addthis_sharing_toolbox"></div>

  <p class="description" itemprop="description"><%= extension.description %></p>

  <div class="row">
    <div class="small-6 columns">
      <h4>Downloads in last month</h4>
      <div class="sparkline"><%= @downloads.join(",") %></div>
    </div>
    <div class="small-6 columns">
      <h4>Commits in last year</h4>
      <div class="sparkline"><%= @commits.join(",") %></div>
    </div>
  </div>

  <%= render_document(version.try(:readme) || "", version.try(:readme_extension) || "") %>

  <% item_types = version.extension_version_content_items.select("distinct item_type").map(&:item_type).sort %>

  <p><%= pluralize(number_with_delimiter(version.commit_count), "commit") %> total for this version.</p>
  <p>
    Last commit on <%= version.last_commit_at %>:<br>
    <%= link_to(version.last_commit_string, version.last_commit_url, target: "_blank") %>
  </p>
  <p><%= item_types.map { |type| pluralize(version.extension_version_content_items.where(item_type: type).count, type) }.join(", ") %></p>
  <p><%= pluralize(version.yml_line_count, "line") %> of YAML, <%= pluralize(version.rb_line_count, "line") %> of Ruby</p>

  <dl class="accordion" data-accordion>
    <% item_types.each do |type| %>
      <dd class="accordion-navigation">
        <a href="#<%= type.downcase %>-items"><%= type.pluralize %></a>
        <div id="<%= type.downcase %>-items" class="content">
          <ul>
            <% version.extension_version_content_items.where(item_type: type).each do |ci| %>
              <li><%= link_to ci.name, ci.github_url, target: "_blank" %></li>
            <% end %>
          </ul>
        </div>
      </dd>
    <% end %>
  </dl>
</div>

<div class="reveal-modal" id="report-extension" data-reveal>
  <h2>Are you sure you want to report this extension?</h2>
  <p class="lead">Please describe the reason for reporting this extension. Our moderators will be notified and will disable the extension if it is found to be inappropriate.</p>
  <%= form_for :report, url: report_extension_path(extension), method: :put do |f| %>
    <div>
      <%= f.label :description, "Describe the issue:" %>
      <%= f.text_area :description %>
    </div>

    <div class="text-right">
      <%= link_to "Cancel", "#", class: "close-reveal-modal" %>
      <%= f.submit "Report", class: "button primary button_to" %>
    </div>
  <% end %>
</div>
