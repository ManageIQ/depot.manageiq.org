<li id="<%= extension.name %>-follow-count">
  <i class="fa fa-star"></i>
  <span itemprop="interactionCount"><%= number_with_delimiter(extension.extension_followers_count) %></span>
  <h5><%= "Stargazer".pluralize(extension.extension_followers_count) %></h5>
</li>
<li id="<%= extension.name %>-follow-button">
  <%= follow_button_for(extension, list: true) do |following| %>
    <%= following ? "Unstar" : "Star" %>
  <% end %>
</li>
